{
  "manifest_version": 3,
  "name": "AI Video Detector",
  "description": "An Extension to detect if videos are AI generated",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "logo.svg"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://*/*", "https://*/*"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./assets/content.js"]
    }
  ]
}
